<%= render 'shared/header' %>

<% if @herbs.size %>

	<% if params[:search] && params[:search] != "" %>
		<div class="panel">
			<p>Your search for <strong><%= params[:search] %></strong> returned <%= @herbs_results.size %> results.</p>
		</div>
	<% end %>

	<table>
	  <tr>
		<th></th>
	    <th><%= sortable "name" %></th>
	    <th><%= sortable "family" %></th>
	    <th><%= sortable "genus" %></th>
	    <th><%= sortable "species" %></th>
		<th class="actions"></th>
	  </tr>

	<% @herbs.each do |herb| %>
	
	  <tr>
	  	<td class="thumb" style="background-image:url('<%=herb.photo.url(:thumb)%>')">
		</td>
		<td><%= link_to herb.name, herb %></td>
	    <td><%= herb.family %></td>
	    <td><%= herb.genus %></td>
	    <td><%= herb.species %></td>
		<td><%= link_to "edit", edit_herb_path(herb) %>
	  </tr>
	<% end %>
	</table>

	<div class="pagination-centered">
		<%= will_paginate @herbs %>
	</div>

<% else %>

	<div class="panel">
		<p>Sorry, no results found.</p>
	</div>

<% end %>
