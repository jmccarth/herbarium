<h1>Listing herbs</h1>
<%= link_to 'New Herb', new_herb_path %>
<br />
<table>
  <tr>
    <th><%= sortable "family" %></th>
    <th><%= sortable "genus" %></th>
    <th><%= sortable "species" %></th>
    <th><%= sortable "author" %></th>
    <th><%= sortable "name" %></th>
    <th><%= sortable "comments" %></th>
    <th>Actions</th>
  </tr>

<% @herbs.each do |herb| %>
  <tr>
    <td><%= herb.family %></td>
    <td><%= herb.genus %></td>
    <td><%= herb.species %></td>
    <td><%= herb.author %></td>
    <td><%= herb.name %></td>
    <td><%= herb.comments %></td>
    <td class="actions">
    	<%= link_to 'Show', herb %>
    	<%= link_to 'Edit', edit_herb_path(herb) %>
    	<%= link_to 'Destroy', herb, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>
